            %fieldset.form-group
              %legend Medium of Exchange
              .form-check
                %label.form-check-label.grey
                  %input#optionsRadios2.form-check-input{:name => "optionsRadios", :type => "radio", :value => "option2"}/
                  Cash
              .form-check
                %label.form-check-label.grey
                  %input#optionsRadios1.form-check-input{:checked => "checked", :name => "optionsRadios", :type => "radio", :value => "option1"}/
                  Check
              .form-check
                %label.form-check-label.grey
                  %input#optionsRadios2.form-check-input{:name => "optionsRadios", :type => "radio", :value => "option2"}/
                  Money Order
            .form-group
              %label{:for => "exampleAddress"} Mailing Address
              %input#formGroupExampleInput.form-control.grey{"aria-describedby" => "textHelp", :type => "text"}/
            .form-group
              %label{:for => "exampleInputEmail1"} Send on
              %input#exampleInputDate.form-control.grey{"aria-describedby" => "dateHelp", :type => "date"}/
